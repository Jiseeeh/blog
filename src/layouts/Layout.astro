---
import { SEO } from "astro-seo";

import "../stylesheets/styles.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title="Jiseeeh's Blogs"
      description="John Carlo Camara's Blogs, Jiseeeh's Blogs, Jiseeeh, Blog, Programming, Programming Blogs"
      openGraph={{
        basic: {
          title: "Jiseeeh's Blogs",
          image: "/unsplash-blog.jpg",
          type: "website",
        },
      }}
      extend={{
        meta: [
          {
            name: "twitter:image",
            content:
              "https://1.bp.blogspot.com/-Pa8HhynzdlI/YJtZEPqbcqI/AAAAAAAAHz0/VwAXWxK3ES81uXTEyd_2aoFVestXe5EFwCLcBGAsYHQ/s2048/Itachi%2Bdoge.png",
          },
          { name: "twitter:title", content: "Jiseeeh's Blogs" },
          {
            name: "twitter:description",
            content: "Blogs to document my progress in programming.",
          },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
