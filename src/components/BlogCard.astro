---
export interface Props {
  title: string;
  date: string;
  excerpt: string;
}
const { title, date, excerpt } = Astro.props;
---

<section>
  <h1>{title}</h1>
  <span>{date}</span>
  <p>{excerpt}</p>
  <a role="button">Read more...</a>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    margin-top: 2rem;
    max-width: 50rem;
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    font-size: clamp(1rem, -1.5rem + 8vw, 1.5rem);
  }

  span {
    color: #ccc;
    font-size: clamp(0.8rem, -1.5rem + 8vw, 1rem);
  }

  a {
    cursor: pointer;
  }
</style>
