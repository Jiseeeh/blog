---
export interface Props {
  title: string;
  date: string;
  excerpt: string;
}
const { title, date, excerpt } = Astro.props;
---

<section>
  <h1>{title}</h1>
  <span>{date}</span>
  <p>{excerpt}</p>
  <a class="btn" role="button" href={`/blogs/${date}`}>Read more...</a>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    margin-top: 2rem;
    max-width: 50rem;
    margin-left: auto;
    margin-right: auto;
    padding: 1.5rem;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
  }

  section:hover {
    background: rgba(242, 244, 246, 0.59);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
  }

  h1 {
    font-size: clamp(1rem, -1.5rem + 8vw, 1.5rem);
  }

  span {
    color: #ccc;
    font-size: clamp(0.8rem, -1.5rem + 8vw, 1rem);
  }

  a {
    cursor: pointer;
    max-width: max-content;
  }
</style>
